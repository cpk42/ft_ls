#include "libft.h"

char	*ft_strcpy(char *dest, const char *src)
{
	int	i;

	i = 0;
//	ft_bzero(dest, ft_strlen(dest) + ft_strlen(src));
	ft_bzero(dest, 256);
	while (src[i] != '\0')
	{
		dest[i] = src[i];
		i++;
	}
	dest[i] = '\0';
	return (dest);
}
